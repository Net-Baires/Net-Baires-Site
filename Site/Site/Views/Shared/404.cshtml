}

<div id="page-banner-area" class="page-banner-area" style="background-image:url(images/banner/banner4.jpg)">
    <!-- Subpage title start -->
    <div class="page-banner-title">
        <div class="text-center">
            <h2>404</h2>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Page Banner end -->


